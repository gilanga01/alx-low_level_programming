CC=gcc
SRC=main.c neighbour.c
OBJ=$(SRC:%.c=%.o)
NAME=neighbour
CFLAGS=-Wall -Werror -Wextra -pedantic

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY : clean
clean :
	-$(RM) -f *~ $(NAME)

.PHONY : oclean
oclean :
	-$(RM) -f $(OBJ)

.PHONY : fclean
fclean : clean oclean

re :
	$(CC) $(CFLAGS) -c $(SRC) 

